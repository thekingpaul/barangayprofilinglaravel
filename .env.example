APP_NAME=Laravel
APP_ENV=production
APP_KEY=base64:fplGiXuT5d95agubl4uBD3cIVqACUJ2+i+Mx2OIdKD8=
APP_DEBUG=false
APP_URL=https://barangayprofilinglaravel.onrender.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
